{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch Dev Build", // Name of task
      "group": "build",
      "type": "shell",
      "command": "npm run dev", // Enter your command here
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^> .*",
          "endsPattern": "^webpack \\d+\\.\\d+\\.\\d+ compiled successfully in \\d+ ms"
        }
      }
    }
  ]
}
